[credential "https://github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = 
	helper = !/usr/bin/gh auth git-credential
[user]
	name = Aron Atif
	email = aronatif360@gmail.com
[core]
	editor = code-insiders --wait
[alias]
	last = log -1 HEAD
[init]
	defaultBranch = main
[merge]
	conflictStyle = diff3
	tool = vscode
[diff]
	tool = vscode
	renames = true
[difftool "vscode"]
	cmd = "code-insiders --wait --diff"
[mergetool "vscode"]
	cmd = "code-insiders --wait --merge"
[color]
    filemode = false
    diff = auto
    status = auto
    branch = auto
    pager = true
[commit]
	verbose = true
